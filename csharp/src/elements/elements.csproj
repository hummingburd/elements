<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Hypar.Elements</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Title>Hypar Elements</Title>
    <Authors>Hypar</Authors>
    <PackageId>Hypar.Elements</PackageId>
    <Description>A building elements library for AEC.</Description>
    <Summary>The Elements library provides object types for creating the built environment.</Summary>
    <Copyright>Hypar LLC, 2018</Copyright>
    <PackageProjectUrl>https://github.com/hypar-io/elements</PackageProjectUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <Version>0.1.6</Version>
    <Tags>AEC, Architecture, Structure, Engineering</Tags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="glTF2Loader" Version="1.1.1-alpha" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Unofficial.LibTessDotNet" Version="2.0.0" />
  </ItemGroup>

</Project>
